<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:padding="10dp"
    android:layout_height="wrap_content">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvname"
        android:text="Meet"
        android:textSize="35dp"
        android:textColor="@color/md_blue_700"></TextView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvnumber"
        android:text="8798789788"
        android:textSize="20dp"
        android:layout_below="@+id/tvname"
        android:textColor="@color/gray"></TextView>

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/icon_delete"
        android:tint="@color/md_red_800"
        android:id="@+id/btndelete"
        android:layout_alignParentRight="true"
        ></ImageView>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btncall"
        android:drawableLeft="@drawable/icon_call"
        android:layout_alignParentRight="true"
        android:text="call"
        android:layout_below="@+id/btndelete"></Button>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/icon_sms"
        android:id="@+id/btnsms"
        android:layout_toLeftOf="@+id/btncall"
        android:text="SMS"
        android:layout_below="@+id/btndelete"></Button>
</RelativeLayout>
